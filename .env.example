# ====== Setup Instructions ======
#
# 1. Copy this file to .env.local:
#    cp -n .env.local.example .env.local
#
# 2. Fill in the REQUIRED values (marked with ⚠️):
#    - NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID (get from https://cloud.walletconnect.com/)
#    - etc.
#
# Note: Variables with default values are safe to leave as-is for development


# ====== App basics ======
# Current runtime environment (development, staging, production)
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_INTENTS_ENV=production
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_FEE_BPS=
NEXT_PUBLIC_APP_FEE_RECIPIENT=
NEXT_PUBLIC_ONE_CLICK_SWAP_PERCENTAGE=
# ⚠️ REQUIRED
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=


# ====== Lighthouse (optional image upload) ======
# Used by the gift flow to upload an optional image to Lighthouse/IPFS.
NEXT_PUBLIC_LIGHTHOUSE_API_KEY=


# ====== One-Click service ======
ONE_CLICK_URL=https://1click.chaindefuser.com/
# ⚠️ REQUIRED
ONE_CLICK_API_KEY=


# ====== Supabase ======
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=


# ====== Postgres (server only) ======
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=postgres
POSTGRES_PRISMA_URL=postgresql://postgres:postgres@localhost:54322/postgres


# ====== Public links (shown in UI) ======
NEXT_PUBLIC_MAIL="defuse@defuse.org"
NEXT_PUBLIC_LINK_X="https://x.com/DefuseProtocol"
NEXT_PUBLIC_LINK_DISCORD="https://discord.gg/rdGAgDRs"
NEXT_PUBLIC_LINK_DOCS="https://docs.near-intents.org"
NEXT_PUBLIC_LINK_TG="https://t.me/near_intents"

NEXT_PUBLIC_SOLVER_RELAY_BASE_URL=http://localhost:3000/api/relay/
NEXT_PUBLIC_SOLVER_RELAY_UPSTREAM_BASE_URL=https://solver-relay-v2.chaindefuser.com/
